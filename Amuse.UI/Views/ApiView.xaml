<UserControl x:Class="Amuse.UI.Views.ApiView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Amuse.UI.Views"
             xmlns:userControls="clr-namespace:Amuse.UI.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000" x:Name="UI">
    <Grid DataContext="{Binding ElementName=UI}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header / Status -->
        <DockPanel Grid.Row="0" Margin="10">
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                <userControls:FontAwesome Icon="&#xf013;" IconStyle="Solid" Color="{StaticResource AccentColour2}" Size="20" VerticalAlignment="Center"/>
                <TextBlock Text="API Status" FontSize="18" FontWeight="Medium" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                <Ellipse Width="12" Height="12" Margin="0,0,8,0" VerticalAlignment="Center">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="#FF5555"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsApiRunning}" Value="True">
                                    <Setter Property="Fill" Value="#55FF55"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
                <TextBlock VerticalAlignment="Center" FontSize="14">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="Stopped"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsApiRunning}" Value="True">
                                    <Setter Property="Text" Value="{Binding ListeningUrl, StringFormat='Running on {0}'}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
            <TextBlock/>
        </DockPanel>

        <!-- Job Queue Section -->
        <DockPanel Grid.Row="1" Margin="10,0,10,10">
            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,5">
                <TextBlock Text="Job Queue" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding Jobs.Count, StringFormat='({0} jobs)'}" Opacity="0.7" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button Command="{Binding ClearCompletedCommand}" ToolTip="Clear Completed Jobs" Padding="8,4">
                        <userControls:FontAwesome Icon="&#xf2ed;" IconStyle="Light" Size="12"/>
                    </Button>
                </StackPanel>
                <TextBlock/>
            </DockPanel>

            <!-- UI Generating Indicator -->
            <Border DockPanel.Dock="Top" Margin="0,0,0,5" Padding="8,6" CornerRadius="3"
                    Background="#1A00AAFF" BorderBrush="#00AAFF" BorderThickness="1"
                    Visibility="{Binding IsUiGenerating, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="#00AAFF" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="UI is currently generating..." Foreground="#00AAFF" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="{StaticResource ControlBrightDefaultBorderBrush}" BorderThickness="1" CornerRadius="3">
                <ListBox ItemsSource="{Binding Jobs}"
                         SelectedItem="{Binding SelectedJob}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="Padding" Value="8,6"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource ControlBrightDefaultBorderBrush}"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" Width="80">
                                    <Ellipse Width="8" Height="8" Margin="0,0,6,0" VerticalAlignment="Center">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="Gray"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                        <Setter Property="Fill" Value="#FFAA00"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Processing">
                                                        <Setter Property="Fill" Value="#00AAFF"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                        <Setter Property="Fill" Value="#55FF55"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                        <Setter Property="Fill" Value="#FF5555"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                        <Setter Property="Fill" Value="#888888"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                    <TextBlock Text="{Binding Status}" FontSize="11" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock DockPanel.Dock="Left" Text="{Binding Type}" FontWeight="Medium" Width="100" VerticalAlignment="Center"/>
                                <TextBlock DockPanel.Dock="Left" Text="{Binding Source}" Opacity="0.7" Width="60" VerticalAlignment="Center"/>
                                <TextBlock DockPanel.Dock="Right" Text="{Binding CreatedAt, StringFormat='{}{0:HH:mm:ss}'}" Opacity="0.7" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="10,0">
                                    <TextBlock Text="{Binding ProgressMessage}" Opacity="0.7" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Opacity="0.5" FontSize="10" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                                           ToolTip="Click to copy Job ID" Cursor="Hand"
                                           MouseLeftButtonUp="JobId_Click" Tag="{Binding Id}">
                                    <TextBlock.Text>
                                        <Binding Path="Id"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </DockPanel>

        <!-- Splitter -->
        <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" Background="Transparent"/>

        <!-- Log Section -->
        <DockPanel Grid.Row="3" Margin="10,0,10,10">
            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,5">
                <TextBlock Text="Logs" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding ClearLogsCommand}" ToolTip="Clear Logs" Padding="8,4">
                        <userControls:FontAwesome Icon="&#xf2ed;" IconStyle="Light" Size="12"/>
                    </Button>
                </StackPanel>
                <TextBlock/>
            </DockPanel>

            <Border BorderBrush="{StaticResource ControlBrightDefaultBorderBrush}" BorderThickness="1" CornerRadius="3">
                <ListBox ItemsSource="{Binding LogEntries}"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Visible"
                         Background="Transparent"
                         BorderThickness="0"
                         x:Name="LogListBox">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="Padding" Value="4,2"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Focusable" Value="False"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FormattedMessage}" FontFamily="Consolas" FontSize="11" TextWrapping="NoWrap"
                                       Cursor="Hand" ToolTip="Click to copy"
                                       MouseLeftButtonUp="LogEntry_Click" Tag="{Binding FormattedMessage}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource ControlDefaultForeground}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Level}" Value="Error">
                                                <Setter Property="Foreground" Value="#FF5555"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="Warning">
                                                <Setter Property="Foreground" Value="#FFAA00"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="Debug">
                                                <Setter Property="Opacity" Value="0.6"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="Verbose">
                                                <Setter Property="Opacity" Value="0.4"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </DockPanel>
    </Grid>
</UserControl>
